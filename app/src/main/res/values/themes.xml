<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Flipsen" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_800</item>
        <item name="colorPrimaryVariant">@color/primary_500</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_800</item>
        <item name="colorSecondaryVariant">@color/primary_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Background -->
        <item name="colorBackgroundFloating">@color/neutral_500</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/neutral_800</item>
    </style>
</resources>